<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.ucai.superwechat.ui.FriendProfileActivity">

    <include layout="@layout/view_layout_titile"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/LL_userprofile"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="#fff">

                <ImageView
                    android:id="@+id/profile_iv_userAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/default_avatar" />

                <TextView
                    android:id="@+id/profile_tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/profile_iv_userAvatar"
                    android:text="昵称"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/profile_tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_tv_nick"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/profile_iv_userAvatar"
                    android:text="微信账号"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/right" />
            </RelativeLayout>


            <TextView
                android:id="@+id/profile_tv_money"
                style="@style/list_txt_Style_without_right"
                android:layout_marginTop="15dp"
                android:text="设置备注和标签" />

            <TextView
                android:id="@+id/profile_tv_smail"
                style="@style/list_txt_Style_without_right"
                android:text="地区" />
            <TextView
                android:id="@+id/friends_more"
                style="@style/list_txt_Style_without_right"
                android:text="更多" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/friends_send"
                style="@style/list_txt_Style_without_right"
                android:layout_marginTop="15dp"
                android:text="发送消息"
                android:background="@color/green"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:visibility="gone"

                />
                <TextView
                    android:id="@+id/friends_addfriends"
                    style="@style/list_txt_Style_without_right"
                    android:layout_marginTop="15dp"
                    android:text="添加到通讯录"
                    android:background="@color/green"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"
                    android:visibility="gone"
                    />

            <TextView
                android:layout_below="@+id/friends_send"
                android:id="@+id/friends_moive"
                style="@style/list_txt_Style_without_right"
                android:layout_marginTop="15dp"
                android:text="发送消息"
                android:background="@color/white"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:visibility="gone"
                /></RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
